{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@tests/*": ["tests/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": [
    "tests/**/*",
    "pages/**/*",
    "config/**/*"
  ],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
